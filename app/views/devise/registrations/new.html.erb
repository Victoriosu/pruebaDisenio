
<div class="container">
  <div class="form">
    <h2 style="text-align: center;">Registro</h2>



    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
        <div class="form-group">
          <%= f.label :nombre %><br />
          <%= f.text_field :nombre_completo, { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.label :fecha_nacimiento %><br />
          <%= f.date_field :fecha_nacimiento, autocomplete: "off", max: Date.today,  class: "form-control"  %>
        </div>
        <div class="form-group">
          <%= f.label :telefono %><br />
          <%= f.text_field :telefono, { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.label :direccion %><br />
          <%= f.text_field :direccion, { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.label :perfil_id %><br />
          <%= f.collection_select :perfil_id, Perfil.all, :id, :nombre%>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Registrarse", class: "btn btn-success" %>
        </div>

    <% end %>
  </div>
</div>


