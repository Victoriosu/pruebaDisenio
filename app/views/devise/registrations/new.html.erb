<div class="container" style="margin-top: 3%; max-width: 100%;width: auto;background-color: #480024;padding-right: 15px; padding-left: 15px;margin-right: auto;margin-left: auto;">
    <article style="margin-left: 30%;margin-right: 30%;">
      <h2 style="text-align: center;color: white">Registro</h2>


      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        
          <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
             </div>
                <%= f.text_field :nombre_completo,placeholder: "Nombre Completo" ,class: "form-control"  %>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fas fa-calendar-alt"></i> </span>
             </div>
                <%= f.date_field :fecha_nacimiento, autocomplete: "off", max: Date.today,  class: "form-control"  %>
          </div>
            
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
          </div>
          <select class="custom-select" style="width: -110px; height: 34px;">
              <option selected="">+569</option>
          </select>
            <%= f.text_field :telefono,placeholder: "Numero de Contacto",type:"text",class: "form-control" %>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fas fa-home"></i> </span>
             </div>
                <%= f.text_field :direccion,placeholder: "Dirección" ,class: "form-control",type:"text" %>
            </div>
          <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fas fa-user"></i> </span>
             </div>
            <%= f.collection_select( :perfil_id, Perfil.all, :id, :nombre,{include_blank: 'Seleccione Perfil'}, {id:"Seleccione Perfil", class: "form-control"})%>
          </div>
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
           </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder: "Ingrese su Email"  ,type:"email"%>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
          </div>
              <%= f.password_field :password, autocomplete: "off", class: "form-control",placeholder:"Ingrese Contaseña (6 Caracteres Minimos)" %>
          </div> <!-- form-group// -->
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
          </div>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control",placeholder:"Repita Contraseña" %>
          </div>
          <div class="form-group">
              <%= f.submit "Registrarse", class: "btn new_btn2",style: "width: 100%;" %>
          </div>
          <div class="actions">
            
          </div>

          <% end %>
        </div>
    </article>
  </div>








