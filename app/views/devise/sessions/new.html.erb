<div class="container new_container">
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading" style="color: white;background-color: #8e476c;border-color: #bce8f1;">
        <div class="panel-title">Iniciar Sesi√≥n</div>
      </div>
      <div class="panel-body" style="color: white;background-color: #8e476c;border-color: #bce8f1;"> 
        <div  style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div style="margin-bottom: 25px" class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <%=  f.email_field :email, autofocus: true, autocomplete: "email",id:"login-username", type:"text", class:'form-control', value:"", placeholder:"Ingrese Email", style: 'height="30px;"'%>
          </div>

            <div style="margin-bottom: 25px" class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <%= f.password_field :password, autocomplete: "off" , autofocus: true, autocomplete: "email",id:"login-username", type:"password", class:'form-control', value:"", placeholder:"Ingrese Email", style: 'height="30px;"'%>
          </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :Recordarme %>
              </div>
            <% end -%>

          <div class="actions">
          <%= f.submit "Iniciar Sesion",class:"btn new_btn1",style: "width: 100%;" %>
          </div>
          <br />
          <%= link_to "Registrarse", new_registration_path(resource_name), class: "nav-link btn new_btn2",style:"width: 100%;" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

 
<%#= render "devise/shared/links" %>
