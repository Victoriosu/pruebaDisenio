<p id="notice"><%= notice %></p>

<h1>Donacions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Monto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donacions.each do |donacion| %>
      <tr>
        <td><%= donacion.user.nombre_completo %></td>
        <td><%= donacion.monto %></td>
        <td><%= link_to 'Show', donacion %></td>
        <td><%= link_to 'Edit', edit_donacion_path(donacion) %></td>
        <td><%= link_to 'Destroy', donacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donacion', new_donacion_path %>
