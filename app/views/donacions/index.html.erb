<p id="notice"><%= notice %></p>

<h1>Donacions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Monto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donacions.each do |donacion| %>
      <tr>
        <td><%= donacion.user.nombre_completo %></td>
        <td><%= donacion.monto %></td>
        <td><%= link_to 'Mostrar', donacion %></td>
        <td><%= link_to 'Editar', edit_donacion_path(donacion) %></td>
        <td><%= link_to 'Eliminar', donacion, method: :delete, data: { confirm: 'Seguro que desea eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Hacer una donacion', new_donacion_path %>
