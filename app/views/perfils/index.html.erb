<body style="background-color: #8e476c">
<div style="color: #ffc000; background-color: #8e476c; padding-right: 3%; padding-left: 3%;">
<p id="notice"><%= notice %></p>

<h1>Perfils</h1>

<table class="table">
  <thead style="background-color: #8e476c;">
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody  style="border: 0px solid #ffc000">
    <% @perfils.each do |perfil| %>
      <tr>
        <td><%= perfil.nombre %></td>
        <td><%= link_to 'Mostrar ', perfil,style:"color: #ffc000" %></td>
        <td><%= link_to 'Editar', edit_perfil_path(perfil),style:"color: #ffc000" %></td>
        <td><%= link_to 'Eliminar', perfil, method: :delete, data: { confirm: 'Are you sure?' },style:"color: #ffc000" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear un perfil', new_perfil_path, class: "nav-link btn new_btn2",style:"width: 95%; margin-left:2%;" %>

</div>
</body>
