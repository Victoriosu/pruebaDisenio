<div style="color: #ffc000; padding-right: 3%; padding-left: 3%;">



<div class="jumbotron" style="background: #9d5569;padding-right: 4%;padding-top: 2%;margin-top: 4%;">
  <div style="text-align: center;"><h2>Perfiles</h2></div>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody  style="border: 0px solid #ffc000">
    <% @perfils.each do |perfil| %>
      <tr>
        <td><%= perfil.nombre %></td>
        <td><%= link_to raw("<i class='material-icons'>remove_red_eye</i>"), perfil,style:"color: #ffc000" %></td>
        <td><%= link_to raw("<i class='material-icons'>edit</i>"), edit_perfil_path(perfil),style:"color: #ffc000" %></td>
        <td><%= link_to raw("<i class='material-icons'>delete</i>"), perfil, method: :delete, data: { confirm: 'Are you sure?' },style:"color: #ffc000" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Crear un perfil', new_perfil_path, class: "nav-link btn new_btn2",style:"width: 95%; margin-left:2%;" %>

</div>

